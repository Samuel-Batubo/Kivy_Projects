MainInterface:

<MainInterface>
    MDTopAppBar:
        title: 'Text Analyser'
        pos_hint: {'top': 1}

    Widget:
        MDLabel:
            text: 'Data'
            size: dp(100), dp(50)
            pos: dp(190), dp(675)
            font_size: dp(32)
            halign: 'center'
            bold: True

        MDTextFieldRect:
            id: input
            hint_text: 'Here'
            size: dp(400), dp(250)
            pos: dp(40), dp(425)
            theme_text_color: 'Custom'
            background_color: 0,0,0,.5
            font_size: dp(24)
            foreground_color: 1,1,1,1

        MDBoxLayout:
            size_hint: None, None
            size: dp(110), dp(50)
            pos: dp(250), dp(375)
            spacing: dp(10)
            MDRaisedButton:
                text: 'Clear'
                on_release: root.cleaner()

            MDRaisedButton:
                text: 'Submit'
                on_release: root.submitter()

        MDLabel:
            text: 'Information'
            bold: True
            font_size: dp(32)
            size: dp(200), dp(50)
            pos: dp(140), dp(325)

        MDCard:
            orientation: 'vertical'
